{
  "name": "stripemeter",
  "version": "0.1.0",
  "description": "Stripe-native usage metering and cost experience platform",
  "private": true,
  "scripts": {
    "dev": "pnpm run --parallel --filter './packages/*' --filter './apps/*' dev",
    "build": "pnpm run --filter './packages/*' --filter './apps/*' build",
    "test": "pnpm run --filter './packages/*' test && if [ \"$E2E_SERVICES\" = \"1\" ]; then pnpm run --filter @stripemeter/api --filter ./apps/workers test; else echo 'Skipping service-dependent tests (set E2E_SERVICES=1 to enable)'; fi",
    "test:simulator:unit": "pnpm --filter @stripemeter/pricing-lib test:unit",
    "test:simulator:integration": "pnpm --filter @stripemeter/pricing-lib test:integration",
    "test:simulator:performance": "pnpm --filter @stripemeter/pricing-lib test:integration",
    "test:simulator:fast": "pnpm run test:simulator:unit",
    "test:simulator:full": "pnpm run test:simulator:unit && pnpm run test:simulator:integration && pnpm run test:simulator:performance",
    "typecheck:simulator": "pnpm --filter @stripemeter/pricing-lib typecheck",
    "lint:simulator": "echo 'No dedicated linter configured for pricing-lib' && exit 0",
    "lint": "pnpm run --filter './packages/*' --filter './apps/*' lint",
    "clean": "pnpm run --filter './packages/*' --filter './apps/*' clean",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "db:migrate": "pnpm --filter @stripemeter/database migrate",
    "db:seed": "pnpm --filter @stripemeter/database seed",
    "typecheck": "pnpm -r --workspace-concurrency=1 run typecheck",
    "precommit": "pnpm lint && pnpm typecheck && pnpm run test:simulator:fast",
    "prepare": "husky",
    "sim": "node packages/simulator-cli/dist/index.js"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3",
    "prettier": "^3.2.4",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "vitest": "^1.2.1",
    "husky": "^9.0.11"
  },
  "packageManager": "pnpm@8.15.1",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
